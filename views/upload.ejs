<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Upload Pas Foto</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />

    <style>
      /* Typing cursor */
      .typing::after {
        content: '|';
        display: inline-block;
        margin-left: 2px;
        animation: blink 0.7s infinite;
      }

      @keyframes blink {
        0%,
        50%,
        100% {
          opacity: 1;
        }
        25%,
        75% {
          opacity: 0;
        }
      }
    </style>
  </head>
  <body style="font-family: 'Inter', sans-serif">
    <!-- Navbar -->
    <%- include('components/navbar') %>

    <!-- Main Container -->
    <div class="container">
      <div class="row min-vh-100 justify-content-center align-items-center text-lg-start">
        <!-- Kolom Konten -->
        <div class="col-lg-8 col-md-10 col-12">
          <h4 class="fw-medium mb-2">Edit Foto Siap Cetak</h4>

          <h1 class="fw-bold mb-2" style="margin-top: -0.5rem">
            <span class="text-warning fw-bold typing" id="typing-text">
              Lebih Cepat Tanpa Ribet
            </span>
          </h1>

          <h4 class="mb-3" style="margin-top: -0.5rem">Ratusan Foto Hanya Hitungan Detik</h4>

          <p class="mb-3">Upload foto di sini</p>

          <form
            action="/upload"
            method="POST"
            enctype="multipart/form-data"
            class="d-flex align-items-center gap-2 flex-wrap"
          >
            <input
              type="file"
              name="photos"
              class="form-control border-warning flex-grow-1"
              multiple
              required
              style="min-width: 150px"
            />

            <button class="btn btn-warning px-4">
              <i class="bi bi-send-fill"></i>
              Kirim
            </button>
          </form>
        </div>
      </div>
    </div>

    <%- include('components/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const sentences = ['Lebih Cepat Tanpa Ribet', 'Hemat Tenaga, Efisien Waktu'];

      const typingElement = document.getElementById('typing-text');
      let sentenceIndex = 0;
      let charIndex = 0;
      let typingSpeed = 150; // kecepatan ketik per huruf
      let delayBetweenSentences = 1500; // delay setelah satu kalimat selesai

      function type() {
        const currentSentence = sentences[sentenceIndex];

        if (charIndex <= currentSentence.length) {
          typingElement.textContent = currentSentence.slice(0, charIndex);
          charIndex++;
          setTimeout(type, typingSpeed);
        } else {
          // selesai mengetik kalimat, tunggu sebentar lalu hapus dan lanjut ke kalimat berikutnya
          setTimeout(() => {
            charIndex = 0;
            sentenceIndex = (sentenceIndex + 1) % sentences.length; // loop kembali ke kalimat pertama
            type();
          }, delayBetweenSentences);
        }
      }

      // mulai animasi
      type();
    </script>
  </body>
</html>
